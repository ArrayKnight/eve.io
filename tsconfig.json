{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "incremental": true,
        "jsx": "react",
        "module": "commonjs",
        "outDir": "./.dist",
        "paths": {
            "~/*": ["./src/*"]
        },
        "removeComments": true,
        "sourceMap": true,
        "target": "es2017"
    },
    "exclude": ["node_modules", ".dist"]
}
